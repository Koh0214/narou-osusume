.container.px-2{:style => "background-color:#e0ffff;"}
  .row
    %p#notice= notice
    %p
      = @topic.content
      総いいね数（#{@topic.like})
  .row
    %table
      %thead
        %tr
          %th Content
          %th Like
          %th{:colspan => "3"}
      %tbody
        - @comments.each do |comment|
          %tr
            %td= comment.content
            %td= comment.like
    %br/
  .row
    %h3 新規コメントをつける
  .row
    .col-md-6.col-md-offset-3
      = form_for [@topic, @comment] do |f|
        = f.label :content
        = f.text_field :content
        = f.label :like
        = f.number_field :like
        = f.submit "コメントをつける", class: "btn btn-primary"
  .row
    = link_to 'トピック一覧へ戻る', topics_path
