
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [@topic, @comment] do |f| %>
      <%= f.label :content %>
      <%= f.text_field :content %>

      <%= f.label :like %>
      <%= f.number_field :like %>

      <%= f.submit "質問作成", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
